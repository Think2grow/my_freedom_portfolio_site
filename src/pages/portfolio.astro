---
import BaseLayout from '../layouts/BaseLayout.astro';
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';
import DataChangeNotification from '../components/react/DataChangeNotification';
import { fetchPortfolioRows } from '../lib/sheets';

let rows: any[] = [];
let error: string | null = null;

try {
  rows = await fetchPortfolioRows();
  
  // Sort rows: "Buying with Active Income" notes first
  rows = rows.sort((a, b) => {
    const aHasActiveIncome = a.Notes?.includes('Buying with Active Income');
    const bHasActiveIncome = b.Notes?.includes('Buying with Active Income');
    
    if (aHasActiveIncome && !bHasActiveIncome) return -1;
    if (!aHasActiveIncome && bHasActiveIncome) return 1;
    return 0;
  });
} catch (e) {
  error = e instanceof Error ? e.message : 'Failed to load portfolio data';
  console.error('Portfolio fetch error:', e);
}

// Filter out unwanted columns (Guide and any empty/unnamed columns)
const headers = rows.length > 0 ? Object.keys(rows[0]).filter(h => {
  const trimmed = h.trim();
  // Keep only Symbol, Description, Price, Notes, and Action columns
  return ['Symbol', 'Description', 'Price', 'Notes', 'Action'].includes(trimmed);
}) : [];

// Helper function to check if a row should have orange background
const hasActiveIncomeNote = (row: any) => {
  return row.Notes?.includes('Buying with Active Income') || false;
};
---

<BaseLayout 
  title="Portfolio List" 
  description="View our current portfolio holdings and investment strategy."
  hideBackgroundLogo={true}
>
  <Nav slot="nav" />
  
  <div class="max-w-7xl mx-auto px-4 py-8 md:py-12">
    <DataChangeNotification data={rows} storageKey="portfolio-data" client:load />
    
    <h1 class="text-4xl md:text-5xl font-black mb-6 md:mb-8 text-transparent bg-gradient-to-r from-[#152433] via-[#1e3a5f] to-[#152433] bg-clip-text">Portfolio List</h1>
    
    <div class="bg-gradient-to-br from-orange-50 via-yellow-50 to-orange-100 border-l-[6px] border-[#f59e0b] p-4 md:p-6 mb-6 md:mb-8 rounded-2xl shadow-2xl">
      <p class="text-sm text-yellow-800">
        <strong>Disclaimer:</strong> This portfolio is for educational purposes only. Not financial advice. Do your own research.
      </p>
    </div>

    {/* Investment Strategy Instructions */}
    <div class="bg-gradient-to-br from-slate-50 via-blue-50 to-slate-50 border-2 border-blue-200 p-5 md:p-7 mb-6 md:mb-8 rounded-2xl shadow-xl">
      <h2 class="text-xl md:text-2xl font-bold text-[#152433] mb-4 flex items-center gap-2">
        <svg class="w-6 h-6 text-[#1e3a5f]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        Investment Strategy
      </h2>
      <div class="space-y-3 text-sm md:text-base text-gray-800 leading-relaxed">
        <div class="flex items-start gap-3">
          <div class="flex-shrink-0 w-6 h-6 rounded bg-orange-200 border-2 border-orange-400 mt-0.5"></div>
          <p><strong class="text-[#f59e0b]">Orange Background:</strong> Buy now with active income. These are growth positions to build with earned income.</p>
        </div>
        <div class="flex items-start gap-3">
          <div class="flex-shrink-0 w-6 h-6 rounded bg-white border-2 border-gray-300 mt-0.5"></div>
          <p><strong class="text-gray-700">White Background:</strong> Stable dividend-paying stocks. Reinvest dividends from orange stocks into these positions.</p>
        </div>
        <div class="pt-2 border-t border-blue-200">
          <p class="font-semibold text-[#1e3a5f]">ðŸ“‹ Execution Plan:</p>
          <p class="mt-1">In each tier, buy one of each stock, then repeat through the list. This creates a balanced, diversified approach to building your portfolio over time.</p>
        </div>
      </div>
    </div>

    {error ? (
      <div class="bg-red-50 border-l-4 border-red-400 p-4 rounded">
        <p class="text-sm text-red-800 mb-2">
          <strong>Error loading data:</strong> {error}
        </p>
        <p class="text-sm text-red-700">
          <a 
            href="https://docs.google.com/spreadsheets/d/1Nh1PhHEyzk1G7XWFpRG5ivXfWumgyNzxyKxw68gKbtQ/edit?gid=0#gid=0" 
            target="_blank" 
            rel="noopener noreferrer"
            class="underline hover:text-red-900"
          >
            View the original Google Sheet
          </a>
        </p>
      </div>
    ) : rows.length === 0 ? (
      <p class="text-gray-600">No data available at the moment.</p>
    ) : (
      <>
        {/* Mobile Card View */}
        <div class="md:hidden space-y-4">
          {rows.map((row) => (
            <div class={`p-4 rounded-lg shadow-lg border-2 ${hasActiveIncomeNote(row) ? 'bg-orange-50 border-orange-200' : 'bg-white border-gray-100'}`}>
              {headers.map(header => (
                <div class="mb-2 last:mb-0">
                  <span class="font-semibold text-xs text-gray-600 block mb-1">{header}</span>
                  <span class="text-sm text-gray-900">{row[header] || 'â€”'}</span>
                </div>
              ))}
            </div>
          ))}
        </div>
        
        {/* Desktop Table View */}
        <div class="hidden md:block overflow-x-auto shadow-2xl rounded-2xl border-2 border-gray-100">
          <table class="min-w-full bg-white rounded-2xl">
            <thead class="bg-gray-100">
              <tr>
                {headers.map(header => (
                  <th class="px-4 py-3 text-left text-sm font-semibold text-gray-700 border-b">
                    {header}
                  </th>
                ))}
              </tr>
            </thead>
            <tbody>
              {rows.map((row, idx) => (
                <tr class={hasActiveIncomeNote(row) ? 'bg-orange-100' : (idx % 2 === 0 ? 'bg-white' : 'bg-gray-50')}>
                  {headers.map(header => (
                    <td class="px-4 py-3 text-sm text-gray-900 border-b">
                      {row[header] || 'â€”'}
                    </td>
                  ))}
                </tr>
              ))}
            </tbody>
          </table>
        </div>
      </>
    )}

    <div class="mt-8 text-sm text-gray-500">
      <p>
        Data is cached for 10 minutes. Last fetched from 
        <a 
          href="https://docs.google.com/spreadsheets/d/1Nh1PhHEyzk1G7XWFpRG5ivXfWumgyNzxyKxw68gKbtQ/edit?gid=0#gid=0" 
          target="_blank" 
          rel="noopener noreferrer"
          class="underline hover:text-gray-700"
        >
          Google Sheets
        </a>.
      </p>
    </div>
  </div>

  <Footer slot="footer" />
</BaseLayout>
